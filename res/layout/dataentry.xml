<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <ScrollView android:id="@+id/ScrollView01" android:layout_width="wrap_content" android:layout_height="wrap_content">
	    <TableLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:gravity="top"
		android:id="@+id/topTable">
		<TableRow>
			<TextView android:text="Amount: " android:layout_gravity="left|center_vertical"/>
			<EditText android:id="@+id/Amount" android:layout_width="250sp" android:inputType="number|numberSigned|numberDecimal"/>
		</TableRow>
		<TableRow>
		    <TextView android:text="Date: " android:layout_gravity="left|center_vertical"/>
			<Button android:text="Date" 
				android:id="@+id/dateButton"  
				android:layout_height="wrap_content" 
				/>
		</TableRow>
		<TableRow>
		<TextView android:text="Event Type: " android:layout_gravity="center"/>
			<RadioGroup android:orientation="horizontal" android:layout_width="fill_parent">
				<RadioButton android:id="@+id/idTourney" android:checked="true" android:text="Tourney"/>
				<RadioButton android:id="@+id/idCash" android:checked="false" android:text="Cash"/>
			</RadioGroup>
		</TableRow>
		<TableRow>
			<TextView android:text="Game: " android:layout_gravity="left|center_vertical"/>
			<Spinner android:id="@+id/gType"
					android:prompt="@string/gameType"
					/>
		</TableRow>
		<TableRow>
			<TextView android:text="Limit: " android:layout_gravity="left|center_vertical"/>
			<Spinner android:id="@+id/gLimit"
					android:prompt="@string/gameLimit"
					/>
		</TableRow>
		<TableRow android:id="@+id/lastRow">
			<TextView android:text="Notes:" android:layout_gravity="left|center_vertical"/>
			<EditText android:id="@+id/notes"
					android:singleLine="false"
					android:gravity="top"
					android:lines="1" 
					android:maxLines="4" 
					android:scrollHorizontally="true"/>
		</TableRow>
		<TableRow>
			<TextView android:text=" "/>
		</TableRow>
		<TableRow>
			<TextView android:text=" "/>
		</TableRow>
		<TableRow>
			<TextView android:text=" "/>
		</TableRow>
		<RelativeLayout android:gravity="center_horizontal" >
		<Button android:text="Accept" 
				android:id="@+id/accept" 
				android:layout_width="160px" 
				android:layout_height="wrap_content" 
				/>
		<Button android:layout_toRightOf="@id/accept" 
				android:text="Clear" 
				android:id="@+id/clear" 
				android:layout_width="160px" 
				android:layout_height="wrap_content"
				/>
		</RelativeLayout>
		</TableLayout>
	</ScrollView>
</LinearLayout>	