<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:myapp="http://schemas.android.com/apk/res/com.gamePnLTracker"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="20dip">
	<com.admob.android.ads.AdView
		android:id="@+id/adAfterLogin"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		myapp:backgroundColor="#000000"
		myapp:primaryTextColor="#FFFFFF"
		myapp:secondaryTextColor="#CCCCCC"
	>
	</com.admob.android.ads.AdView>
	<ScrollView android:id="@+id/ScrollView01" android:layout_width="wrap_content" android:layout_height="wrap_content">
	<TextView android:layout_height="wrap_content" 
		android:layout_width="fill_parent" 
		android:textSize="20sp" 
		android:text="Amount" 
		android:id="@+id/PNL" android:textStyle="normal">
	</TextView>
	</ScrollView>
</LinearLayout>
